<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>

<div class="columns is-centered mt-6">
  <div class="column is-one-third">
    <nav class="panel is-link">
        <p class="panel-heading">
          <%= @entry.meal_type %>: <%= @entry.category.title %>
        </p>
        <div class="panel-block">
          Calories: <%= @entry.calories %>
        </div>
        <div class="panel-block">
          Proteins: <%= @entry.proteins %>
        </div>
        <div class="panel-block">
          Carbohydrates: <%= @entry.carbohydrates %>
        </div>
        <div class="panel-block">
          Fats: <%= @entry.fats %>
        </div>
    </nav>
    <div class="columns is-mobile">
      <div class="column">
        <%= link_to "Edit", edit_entry_path(@entry), class: "button is-gray", style: "width: 49%;" %>
        <%= link_to "Delete", entry_path(@entry), method: :delete, data: {confirm: "Are you sure?"}, class: "button is-gray", style: "width: 49%;" %>
      </div>
    </div>
  </div>
</div>